{
  "name": "red-team-dotfiles",
  "version": "2.0.0",
  "description": "Professional Red Team dotfiles with security-first design, modular architecture, and cross-platform compatibility",
  "keywords": [
    "dotfiles",
    "red-team",
    "security",
    "penetration-testing",
    "zsh",
    "tmux",
    "vim",
    "macos",
    "linux",
    "warp-terminal"
  ],
  "homepage": "https://github.com/redteam/dotfiles",
  "repository": {
    "type": "git",
    "url": "https://github.com/redteam/dotfiles.git"
  },
  "bugs": {
    "url": "https://github.com/redteam/dotfiles/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Red Team Developer",
    "email": "developer@redteam.local"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "release": "standard-version",
    "release:dry": "standard-version --dry-run",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "commit": "git-cz",
    "lint": "make lint",
    "test": "make test",
    "build": "make build-release-artifacts",
    "prepare": "husky install",
    "postinstall": "echo 'Run: npm run prepare && pre-commit install'"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "standard-version": "^9.5.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && make test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{sh,bash}": [
      "shellcheck",
      "shfmt -w -i 4"
    ],
    "*.{yml,yaml}": [
      "yamllint"
    ],
    "*.md": [
      "markdownlint --fix"
    ]
  },
  "standard-version": {
    "scripts": {
      "prerelease": "make ci-local",
      "postchangelog": "make build-release-artifacts"
    }
  }
}