# Plugin Management with Zinit
# Modern Zsh plugin manager with lazy loading

# Install zinit if not present
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"

if [[ ! -d "$ZINIT_HOME" ]]; then
    echo "Installing zinit plugin manager..."
    mkdir -p "$(dirname $ZINIT_HOME)"
    git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
fi

# Source zinit
source "${ZINIT_HOME}/zinit.zsh"

# Load essential plugins with lazy loading
zinit wait lucid for \
    atinit"zicompinit; zicdreplay" \
        zdharma-continuum/fast-syntax-highlighting \
    atload"_zsh_autosuggest_start" \
        zsh-users/zsh-autosuggestions \
    blockf atpull'zinit creinstall -q .' \
        zsh-users/zsh-completions

# Additional useful plugins (loaded lazily)
zinit wait lucid for \
    agkozak/zsh-z \
    hlissner/zsh-autopair \
    MichaelAquilina/zsh-you-should-use

# Red team specific plugins
zinit wait lucid for \
    as"program" pick"bin/git-*" src"etc/git-extras-completion.zsh" \
        tj/git-extras \
    as"program" pick"cht.sh" \
        chubin/cheat.sh

# Configure zsh-autosuggestions
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=#666666'
ZSH_AUTOSUGGEST_STRATEGY=(history completion)
ZSH_AUTOSUGGEST_USE_ASYNC=true

